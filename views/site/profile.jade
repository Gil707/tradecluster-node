extends ../layout

block content
    h2.text-capitalize #{user.login}
    div.row
        div.col-lg-8
            div(style='padding-left: 16px')
                h3 My orders
                hr
                table.table.table-responsive.table-darkstyle
                    thead
                        tr
                            th Date
                            th Type
                            th Name
                            th Requisites
                            th Payed
                            th Comment
                    tbody
                        each order in orders
                            if (order.payed)
                                - color = '#66ff33'
                            else
                                - color = '#ff9999'
                            tr(style='color:' + color)
                                td= order.createdAt.toISOString().replace(/T/, ' ').replace(/\..+/, '')
                                td
                                    case order.type
                                        when 1
                                            span BotCfg
                                        when 2
                                            span Strategy
                                        when 3
                                            span Amalyzes
                                        when 4
                                            span Post
                                        default
                                            span strange type...
                                td: a(href='/botconfigs/' + order.cfg_id): b.text-uppercase= order.cfg_name
                                td= order.addr
                                td
                                    if (order.payed)
                                        i.glyphicon.glyphicon-ok
                                    else
                                        i.glyphicon.glyphicon-remove
                                td= order.comment
        div.col-lg-2.padding-left-20
            h3 Profile
                span.hint: a(href='#').margin-lr-10 Edit
            hr
            form(method='POST', action='/users/edit/' + user._id)
            div.form-group-sm
                label Name:&nbsp;
                span= user.name
            div.form-group-sm
                label E-mail:&nbsp;
                span= user.email
            div.form-group-sm
                label Status:&nbsp;
                    case user.status
                        when 1
                            span User
                        when 2
                            span.status-su Subscriber
                        when 3
                            span.status-mn Manager
                        when 4
                            span.status-adm Admin
            div.form-group-sm
                label Paid till:&nbsp;
                span= user.paid_till
            div.form-group-sm
                label Balance:&nbsp;
                span= user.balance
            div.form-group-sm
                label Reputation:&nbsp;
                span= user.reputation
