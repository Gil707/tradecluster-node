extends layout

block content
    div.row
        div.col-lg-6
            div.panel.panel-default
                div.panel-heading
                    span: b Posts
                div.panel-body
                    ul.list-group
                        each post, i in posts
                            li.list-group-item
                                h4 #{post.caption}
                                    i.pull-right.post-date #{post.created_at.toISOString().replace(/T/, ' ').replace(/\..+/, '')}
                                p!= post.preview
                                if (user)
                                    a(href="/posts/" + post._id) Learn more...
                                else
                                    span.label.label-danger Please Login to view more...
        div.col-lg-4
            div.panel.panel-default
                div.panel-heading
                    span: b News
                div.panel-body#news-div

                    // news list

        div.col-lg-2
            div.panel.panel-default
                div.panel-heading
                    span: b Courses
                div.panel-body
                    img(src='/img/logo.png' width='100')
                    br
                    if (user)
                        div#courses
                    else
                        span.label.label-danger Please Login to view more...